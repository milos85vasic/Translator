  "translation": {
    "default_provider": "dictionary",
    "default_model": "",
    "cache_enabled": true,
    "cache_ttl": 3600,
    "max_concurrent": 5,
    "providers": {}
  },
   "distributed": {
    "enabled": true,
    "workers": {
