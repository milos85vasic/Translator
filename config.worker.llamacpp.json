        "threads": 8,
        "gpu_layers": 35,
        "temperature": 0.1,
        "top_p": 0.9,
        "max_tokens": 4096,
        "batch_size": 512
      }
    }
  },
  "distributed": {
    "enabled": false,
    "workers": {},
    "ssh_timeout": 30,
    "ssh_max_retries": 3,
    "health_check_interval": 30,
    "max_remote_instances": 20
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output_file": ""
  }
