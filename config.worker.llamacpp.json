  "translation": {
    "default_provider": "llamacpp",
    "default_model": "llama-2-7b-chat.gguf",
    "cache_enabled": true,
    "cache_ttl": 3600,
    "max_concurrent": 5,
    "providers": {
      "llamacpp": {
        "model_path": "/Users/milosvasic/models/llama-2-7b-chat.gguf",
